<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Tri bodky vľavo -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dots_menu"
        android:contentDescription="Menu"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="8dp" />

    <!-- Suma + znak € vedľa tri bodky -->
    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,00 €"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/menuIcon"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true" />

    <!-- Vertikálny layout pre Title a Category -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/textViewAmount"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Názov transakcie"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategória"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Dátum malým písmom vpravo dole -->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-05-31"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>